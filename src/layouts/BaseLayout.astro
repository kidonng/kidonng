---
import '../styles.css'

interface Props {
    title: string
}

const { title } = Astro.props
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />

        <title>{title}</title>

        <style>
            @view-transition {
                navigation: auto;
            }
        </style>
    </head>

    <body class="bg-muted-bg">
        <slot />
    </body>
</html>
