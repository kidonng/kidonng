---
import { css } from 'code-tag'
import { spring } from 'motion'
import { Avatar } from '../constants/avatar'

import '@fontsource-variable/playpen-sans'
import '../styles.css'

interface Props {
    title: string
    description: string
}

const { title, description } = Astro.props

type Meta = {
    charset: 'utf-8'
} | {
    name: string
    content: string
} | {
    property: string
    content: string
}

const MetaItems: Meta[] = [
    { charset: 'utf-8' },
    {
        name: 'viewport',
        content: 'width=device-width',
    },
    {
        name: 'color-scheme',
        content: 'light dark',
    },
    {
        name: 'description',
        content: description,
    },
    {
        property: 'og:type',
        content: 'website',
    },
    {
        property: 'og:site_name',
        content: 'Kid',
    },
    {
        property: 'og:url',
        content: Astro.url.href,
    },
    {
        property: 'og:title',
        content: title,
    },
    {
        property: 'og:description',
        content: description,
    },
    {
        property: 'og:image',
        content: Avatar.src,
    },
    {
        property: 'og:image:alt',
        content: Avatar.alt,
    },
]
---

<html lang="en">
    <head>
        {MetaItems.map(item => <meta {...item} />)}

        <title>{title}</title>

        <style set:html={css`
            :root {
                --spring-500: ${spring(0.5).toString()};
            }
        `}
        />
    </head>

    <body class="min-h-screen bg-base text-text font-playpen-sans">
        <slot />
    </body>
</html>
