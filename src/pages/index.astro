---
import { Image } from 'astro:assets'
import { spring } from 'motion'
import { Content } from '../../readme.md'
import { Avatar } from '../constants/avatar'
import { IndexId } from '../constants/elements'
import BaseLayout from '../layouts/BaseLayout.astro'
---

<style define:vars={{ motion: spring(0.5) }} />

<BaseLayout
  title="Kid Â· Weeb Developer"
  description="@kidonng's homepage"
>
    <main class="max-w-xl mx-auto text-center px-4 pt-16 pb-8">
        <Image
          class="size-24 rounded-full mx-auto mb-4 animate-[slide-in-up_both_var(--motion)]"
          {...Avatar}
          inferSize
          loading="eager"
        />

        <div id="index-content">
            <Content />
        </div>
        <script src="../scripts/channel-link.ts" />

        <template id={IndexId.Icp}>
            <div class="text-xs font-thin mt-32">
                <a href="https://beian.miit.gov.cn" />
            </div>
        </template>
        <script src="../scripts/icp.ts" />
    </main>
</BaseLayout>
